---
type PaceEntry = {
	time: string
	pacePerKm: string
	pacePerMile: string
}

interface Props {
	title: string
	entries: PaceEntry[]
	class?: string
}

const { title, entries, class: className } = Astro.props
---

<section class={`my-8 ${className || ''}`}>
	<h2 class="text-2xl font-bold mb-4 text-center dark:text-white">
		{title}
	</h2>
	<div class="overflow-x-auto">
		<table class="min-w-full border dark:border-neutral-700 rounded-lg dark:bg-neutral-900 dark:text-white">
			<thead>
				<tr class="dark:bg-neutral-800">
					<th class="px-4 py-2 text-left border-b dark:border-neutral-700">
						Time
					</th>
					<th class="px-4 py-2 text-left border-b dark:border-neutral-700">
						Pace (min/km)
					</th>
					<th class="px-4 py-2 text-left border-b dark:border-neutral-700">
						Pace (min/mile)
					</th>
				</tr>
			</thead>
			<tbody>
				{entries.map((entry, idx) => (
					<tr
						class={
							idx % 2 === 0
								? 'dark:bg-neutral-900'
								: 'dark:bg-neutral-800/60'
						}
					>
						<td class="px-4 py-2 border-b dark:border-neutral-700">
							{entry.time}
						</td>
						<td class="px-4 py-2 border-b dark:border-neutral-700">
							{entry.pacePerKm}
						</td>
						<td class="px-4 py-2 border-b dark:border-neutral-700">
							{entry.pacePerMile}
						</td>
					</tr>
				))}
			</tbody>
		</table>
	</div>
</section>